<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".User_Page">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/showListViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示列表"
            android:layout_centerHorizontal="true" />

    </androidx.appcompat.widget.Toolbar>

    <!-- 用户头像 (圆形区域) -->
    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/topToolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/test"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background" />  <!-- 圆形背景 -->

    <!-- 用户名 -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="test"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center" />

    <!-- 邮箱 -->
    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="test@ucd.cn"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center" />

    <!-- 日记数量 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:id="@+id/diary_count_layout"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日记数量："
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/diary_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="N"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 连续记录天数 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/diary_count_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连续记录天数："
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/consecutive_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="M"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>